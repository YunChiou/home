<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration_boss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.home.Registration_boss">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/boss_act"
            android:hint="帳號"
            android:paddingLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:textColorHint="@android:color/background_light"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/boss_pwd"
            android:hint="密碼"
            android:paddingLeft="10dp"
            android:layout_below="@+id/boss_act"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:textColorHint="@android:color/background_light"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/boss_name"
            android:hint="姓名"
            android:paddingLeft="10dp"
            android:layout_below="@+id/boss_pwd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:textColorHint="@android:color/background_light"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/boss_storename"
            android:hint="店鋪名稱"
            android:paddingLeft="10dp"
            android:layout_below="@+id/boss_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:textColorHint="@android:color/background_light"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/boss_storeadd"
            android:hint="店鋪地址"
            android:paddingLeft="10dp"
            android:layout_below="@+id/boss_storename"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:textColorHint="@android:color/background_light"
            android:layout_marginTop="10dp"
            />

        <Button
            android:text="確認"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/boss_confirm_button"
            android:layout_marginTop="10dp"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
